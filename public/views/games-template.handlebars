<main>
    <div class="container">
        <div class="wrapper-games">
            <h1>Games</h1>

            <div class="col-md-12 col-xs-12 wrapper-games-articles">
                <div class="row">
                    {{!-- Games --}}
                    {{#each rows}}
                        <article class="col-12">
                            <header>
                                <h2 class="article-header">
                                    {{ game_name }}
                                </h2>
                            </header>
                            <footer>
                                <span class="article-footer">
                                    Posted by <strong>{{username}}</strong> in <strong>{{category}}</strong>
                                </span>
                            </footer>
                            <section class="mt-10">
                                <div class="container">
                                    <div class="row">
                                        <div class="article-body">
                                            <img class="pull-left article-img" src="{{main_picture}}" width="210" height="210">
                                            <span class="article-text">
                                            {{trimString description}}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <div class="container">
                                    <div class="row">
                                        <div class="col-12 text-right">
                                            <button class="btn-read-more">
                                                Read More
                                            </button>
                                        </div>
                                    </div>
                            </div>
                        </article>
                    {{/each}}
                    {{!--Pagination--}}
                    <div class="col-12 pagination text-right mr-20">
                        <span class="pagination-pages">
                            Page 1 of 4
                        </span>
                        <span class="pagination-numbers">
                            <ul>
                                <li class="active"><a href="#games/page/1">1</a></li>
                                <li><a href="#games/page/2">2</a></li>
                                <li><a href="#games/page/3">3</a></li>
                                <li><a href="#games/page/4">4</a></li>
                            </ul>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>